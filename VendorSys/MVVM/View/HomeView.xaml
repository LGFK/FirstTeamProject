<UserControl x:Class="VendorSys.MVVM.View.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VendorSys.MVVM.View" 
             xmlns:viewmodel="clr-namespace:VendorSys.MVVM.ViewModel" 
             d:DataContext="{d:DesignInstance Type=viewmodel:HomeViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             >
    <Grid>      
        <Grid.RowDefinitions>
            <RowDefinition Height=" 50"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <TextBox Text="Discounts"
                 Background="Transparent"
                 Foreground="White"
                 FontSize="28"
                 HorizontalContentAlignment="Center"
                 IsReadOnly="True">

        </TextBox>

        <TextBox x:Name="filterTextBox" Width="250"
                       Height="40"
                       VerticalContentAlignment="Center"
                       HorizontalAlignment="Left"
                       Margin="5"
                       Grid.Column="0"
                       Grid.Row="0"
                       Style="{StaticResource ModernTextBox1}" 
                     Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}"/>

        <ListBox x:Name="listView" Grid.Column="1" Grid.Row="1" Margin="10"
         ItemsSource="{Binding FilteredData}"
         Background="Transparent"
                 HorizontalContentAlignment="Center">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="2" />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Background="#7C80C2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Image Width="250" Height="250" Grid.Row="0"
                       Source="{Binding Image}"/>
                        <TextBlock VerticalAlignment="Center" 
                           Grid.Row="1"
                           Margin="5,0"
                           Text="{Binding Name}"/>
                        <Button Grid.Row="2" Margin="5,0,0,0"
                                Style="{StaticResource btnStyle1}"
                        Command="{Binding ElementName=listView, Path=DataContext.AddCommand}"
                        CommandParameter="{Binding}">Add</Button>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>


